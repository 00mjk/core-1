<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jcryptool</groupId>
	<artifactId>org.jcryptool.releng</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>JCrypTool</name>
	<url>https://github.com/jcryptool</url>
	<description>This is the main (parent) pom file for the JCrypTool product. Execute &quot;mvn clean package&quot; to generate the JCrypTool release for all supported platforms. Execute same goal with keystore parameters to sign the release. Generated artifacts are stored in the &quot;core/org.jcryptool.product/target/products&quot; directory. Maven 3 and at least Java 7 are required for the build. See https://github.com/jcryptool/core/wiki/Creating-a-new-Release for more information.

The categorized p2 repository is generated in org.jcryptool.repository/target/repository.</description>
	<organization>
		<name>CrypTool</name>
		<url>http://www.cryptool.org</url>
	</organization>

	<licenses>
		<license>
			<name>Eclipse Public License (EPL) 1.0</name>
			<url>http://www.eclipse.org/legal/epl-v10.html</url>
		</license>
	</licenses>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<properties>
		<tycho.version>0.21.0</tycho.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<product.id>jcryptool</product.id>
		<product.version>1.0.0</product.version>
		<timestamp>R${maven.build.timestamp} (weekly)</timestamp>
		<maven.build.timestamp.format>yyyyMMdd</maven.build.timestamp.format>
	</properties>

	<repositories>
		<repository>
			<id>eclipse-luna</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/luna</url>
		</repository>
		<repository>
			<id>eclipse-babel-luna</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/technology/babel/update-site/R0.12.0/luna</url>
		</repository>
	</repositories>

	<modules>
		<module>../../core</module>
		<module>../../crypto</module>
	</modules>

	<build>
		<defaultGoal>clean package</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-versions-plugin</artifactId>
				<version>${tycho.version}</version>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<!-- release is only signed if jcryptool.keystore is given as runtime
				parameter (more parameters are required): mvn clean package -Djcryptool.keystore=[path
				to jks file] -Djcryptool.alias=[key alias] -Djcryptool.storepass=[store password]
				-Djcryptool.keypass=[key password] -->
			<id>signRelease</id>
			<activation>
				<property>
					<name>jcryptool.keystore</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jarsigner-plugin</artifactId>
						<version>1.3.2</version>
						<executions>
							<execution>
								<id>sign</id>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
							<execution>
								<id>verify</id>
								<goals>
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<!-- required parameters for signing -->
							<keystore>${jcryptool.keystore}</keystore>
							<alias>${jcryptool.alias}</alias>
							<storepass>${jcryptool.storepass}</storepass>
							<keypass>${jcryptool.keypass}</keypass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<reporting>
		<plugins>
			<plugin>
				<!-- mvn clean compile site -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<version>2.5.4</version>
				<configuration>
					<effort>Max</effort>
					<threshold>Low</threshold>
					<xmlOutput>true</xmlOutput>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
</project>