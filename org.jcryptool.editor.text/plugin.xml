<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jcryptool.editor.text.editor.JCTTextEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="txt,log,xml,bat,sh,ini"
            icon="icons/text.gif"
            id="org.jcryptool.editor.text.editor.JCTTextEditor"
            name="%editor.name"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.jcryptool.editor.text.actionSet1"
            label="%action.set"
            visible="true">
         <action
               class="org.jcryptool.editor.text.action.NewEmptyFileJCTTextEditorAction"
               icon="icons/text.gif"
               id="org.jcryptool.editor.text.newEmptyFile"
               label="%emptyeditor.label"
               menubarPath="file/newfile/1"
               style="push">
         </action>
         <action
               class="org.jcryptool.editor.text.action.NewFileJCTTextEditorAction"
               icon="icons/text.gif"
               id="org.jcryptool.editor.text.newFile"
               label="%sampleeditor.label"
               menubarPath="file/newfile/3"
               style="push">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.jcryptool.core.editorButton">
      <OnClick
            OnClickClass="org.jcryptool.editor.text.action.NewFileJCTTextEditorAction">
      </OnClick>
   </extension>
   <extension
         point="org.jcryptool.core.operations.editorServices">
      <service
            category="5"
            class="org.jcryptool.editor.text.service.JCTEditorService"
            icon="icons/text.gif"
            id="org.jcryptool.editor.text"
            label="%sampleeditor.label"
            pushAction="org.jcryptool.editor.text.action.NewFileJCTTextEditorAction">
      </service>
      <service
            category="4"
            class="org.jcryptool.editor.text.service.JCTEditorService"
            icon="icons/text.gif"
            id="org.jcryptool.editor.text"
            label="%emptyeditor.label"
            pushAction="org.jcryptool.editor.text.action.NewEmptyFileJCTTextEditorAction">
      </service>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.jcryptool.editor.text.preferences.PreferencesInitializer"/>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.jcryptool.editor.text.editorContribution.JCTTextEditor"
            targetID="org.jcryptool.editor.text.editor.JCTTextEditor">
         <action
               class="org.jcryptool.editor.text.action.OpenInHexAction"
               id="org.jcryptool.editor.text.action.openInHex"
               label="%action.switch.editor"
               menubarPath="edit/showin/start"
               style="push"/>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.jcryptool.editor.text.action.StartUp">
      </startup>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="%open.command.description"
            helpContextId="org.jcryptool.editor.text.textEditor"
            id="org.jcryptool.editor.text.openFile"
            name="%open.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.editor.text.commands.OpenEditorHandler"
            commandId="org.jcryptool.editor.text.openFile"
            helpContextId="org.jcryptool.editor.text.textEditor">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.eclipse.core.filesystem.IFileStore">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.jcryptool.fileexplorer.popup.open">
         <command
               commandId="org.jcryptool.editor.text.openFile"
               helpContextId="org.jcryptool.editor.text.textEditor"
               icon="icons/text.gif"
               label="%open.command.label"
               style="push"
               tooltip="%open.command.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.jcryptool.preferences.editors"
            class="org.jcryptool.editor.text.preferences.PreferencesPage"
            id="org.jcryptool.editor.text.preferences"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.jcryptool.editor.text.preferences.PreferencesInitializer">
      </initializer>
   </extension>

</plugin>
