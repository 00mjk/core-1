<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="org.jcryptool.webbrowser.ui.BrowserView"
            icon="icons/internal_browser.png"
            id="org.jcryptool.webbrowser.browser"
            category="org.eclipse.ui"
            name="%view.name"
            restorable="true">
         <description>
            %view.description
         </description>
      </view>
   </extension>
   <extension point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.jcryptool.core.perspective">
         <view
               closeable="true"
               id="org.jcryptool.webbrowser.browser"
               minimized="false"
               moveable="true"
               ratio="0.5"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="false">
         </view>
         <viewShortcut
               id="org.jcryptool.webbrowser.browser">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.webbrowser.open"
            name="%action.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.webbrowser.command.OpenWebBrowser"
            commandId="org.jcryptool.webbrowser.open">
      </handler>
   </extension>

</plugin>
