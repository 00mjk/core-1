<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.jcryptool.crypto.flexiprovider.ui.perspective.FlexiProviderPerspective"
            icon="icons/persp.png"
            id="org.jcryptool.crypto.flexiprovider.ui.perspective.FlexiProviderPerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.jcryptool.crypto.flexiprovider.ui.perspective.FlexiProviderPerspective">
         <perspectiveShortcut
               id="org.jcryptool.core.perspective">
         </perspectiveShortcut>
         <view
               closeable="true"
               id="org.jcryptool.crypto.flexiprovider.algorithms.ui.views.FlexiProviderAlgorithmsView"
               minimized="false"
               moveable="true"
               ratio="0.75f"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <viewShortcut
               id="org.eclipse.help.ui.HelpView">
         </viewShortcut>
         <view
               closeable="true"
               id="org.jcryptool.crypto.keystore.KeystoreView"
               minimized="false"
               moveable="true"
               ratio="0.35f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.jcryptool.crypto.flexiprovider.operations.OperationsView"
               minimized="false"
               moveable="true"
               ratio="0.66f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               id="org.eclipse.help.ui.HelpView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.jcryptool.crypto.keystore.KeystoreView"
               visible="true">
         </view>
         <hiddenMenuItem
               id="org.jcryptool.core.algorithms">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="org.jcryptool.core.analysis">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="org.jcryptool.core.visuals">
         </hiddenMenuItem>
         <hiddenMenuItem
               id="org.jcryptool.core.games">
         </hiddenMenuItem>
      </perspectiveExtension>
   </extension>

</plugin>
